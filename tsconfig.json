{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@config/*": ["src/config/*"],
      "@database/*": ["src/database/*"],
      "@graphql/*": ["src/graphql/*"],
      "@jwt/*": ["src/jwt/*"],
      "@utils/*": ["src/utils/*"],
      "@mail/*": ["src/mail/*"],
      "@src/*": ["src/*"],
      "@apis/*": ["src/apis/*"],
      "@uploads/*": ["src/uploads/*"],
      "@filters/*": ["src/filters/*"]
    }
  }
}
